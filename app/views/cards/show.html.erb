<% content_for(:title, t('.title')) %>
<div class="carddetailPage">
  <div class="container">
    <div class="cardContainer">
      <div class="cardContents_title">
        <div><%= (t "defaults.title") %></div>
        <h2><%= @card.title %></h2>
      </div>
      <div class="cardContents_memo">
        <div><%= (t ".memo") %></div>
        <div><%= @card.memo %></div>
      </div>
      <div class="cardContents_listStatus">
        <div><%= (t ".list") %></div>
        <div><%= @card.list.title %></div>
      </div>
      <div class="cardContents_btnArea">
        <%= link_to (t ".edit"), edit_list_card_path(@card.list, @card), class: "edit_btn" %>
        <%= link_to (t ".delete"), list_card_path(@card.list, @card), class: "text-danger delete_btn", method: :delete, data: { confirm: (t "defaults.message.delete_confirm")} %>
      </div>
    </div>
  </div>
</div>