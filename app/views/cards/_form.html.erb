<div class="modal-dialog">
  <div class="modal-content">
    <%= form_with model: @card, url: [@list, @card], local: false, id: "new_card" do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <%= f.hidden_field :list_id, value: @list.id %>
      <div class="modal-header">
        <h5 class="modal-title"><%= (t "cards.new.name") %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group field">
          <%= f.label :title, class: "form-control-label" %>
          <%= f.text_field :title, class: "form-control", placeholder: (t "cards.new.title") %>      
        </div>
        <div class="form-group field">
          <%= f.label :memo, class: "form-control-label" %>
          <%= f.text_area :memo, class: "form-control", placeholder: (t "defaults.show")%>        
        </div>
      </div>        
      <div class="text-center">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>