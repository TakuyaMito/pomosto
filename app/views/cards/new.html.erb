<% content_for(:title, t('.title')) %>
<div class="cardnewPage">
  <div class="container">
    <%= form_with model: @card, url: { action: :create }, class: "cardnewForm", local: true do |f| %>
      <%= f.hidden_field :list_id, value: @list.id %>
      <div class="cardnewForm_title">
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, class: "form-control", placeholder: :title %>
      </div>
      <div class="cardnewForm_memo">
        <%= f.label :memo %>
        <%= f.text_area :memo, class: "form-control", placeholder: (t "defaults.show") %>
      <div class="text-center">
        <%= f.submit (t ".create"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>