<div id="list-<%= list.id %>">
  <div class="list shadow p-3 mb-3">
    <div class="list_header">
      <h2 class="list_header_title"><%= list.title %></h2>
      <div class="list_header_action">
        <%= link_to content_tag(:i, "", class: "fas fa-trash"), list_path(list),  method: :delete, data: { confirm: (t "defaults.message.delete_confirm") }, remote: true %>
        <%= link_to content_tag(:i, "", class: "fas fa-pen" ), edit_list_path(list), remote: true %>
      </div>
    </div>
    <div class="cardWrapper" id= "cards-<%= list.id %>">
      <% list.cards.each do |card| %>
        <%= link_to list_card_path(list, card), class: "cardDetail_link", remote: true do %> 
          <div class="card" id= "card-<%= card.id %>" >
            <h3 class="card_title"><%= card.title %></h3>
            <% if card.memo.size > 0 %>
              <div class="card_detail is-exist">
                <i class="fas fa-bars"></i>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="addCard">
      <i class="far fa-plus-square"></i>
      <%= link_to (t "defaults.add_card"), new_list_card_path(list), class: "addCard_link", remote: true %>
    </div>
  </div>
</div>