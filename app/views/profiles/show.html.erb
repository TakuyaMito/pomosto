<% content_for(:title, t('.title')) %>
<div class="col-md-6 col-md-offset-4 mx-auto">
	<div class="box">
		<span class="input-group-addon addon-twitter">
			<p><i class="fas fa-desktop"></i></i><%= t ".title" %>
      <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-primary float-right' %>
      </p>
		</span>
    <div class="divider-form"></div>
    <div class="form-group">
    <p><i class="far fa-envelope"></i>
      <%= t(User.human_attribute_name(:email)) %></p>
      <%= current_user.email %>
    </div>

    <div class="divider-form"></div>
    <div class="form-group">
    <p><i class="fas fa-pen"></i>
      <%= t(User.human_attribute_name(:name)) %></p>
      <%= current_user.name %>
    </div>

    <div class="divider-form"></div>
    <div class="form-group">
    <p><i class="fas fa-stopwatch"></i>
      <%= (t ".total_pomo") %></p>
      <%= @worktime_count %>
    </div>
	</div>
</div>
